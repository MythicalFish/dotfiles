[
  // Note: use Karabiner to map left/right/up/down to space+h/l/j/k
  {
    "key": "alt+shift+cmd+ctrl+9",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "alt+shift+cmd+ctrl+0",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "space",
    "command": "list.select",
    "when": "listFocus"
  },
  {
    "key": "ctrl+cmd+t",
    "command": "terminalTabs.createNamedTerminal"
  },
  {
    // Focus Editor
    "key": "alt+ctrl+shift+cmd+d",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    // Focus List
    "key": "alt+ctrl+shift+cmd+a",
    "command": "workbench.view.explorer"
  },
  {
    // QuickOpen
    "key": "ctrl+shift+alt+cmd+s",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen"
  },
  /**
   * TERMINAL
   */
  // Focus Terminal
  {
    "key": "alt+ctrl+shift+cmd+f",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "cmd+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "alt+ctrl+shift+cmd+f",
    "command": "workbench.action.togglePanel",
    "when": "terminalFocus"
  },
  // Navigate terminals
  {
    "key": "ctrl+shift+alt+cmd+9",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  }
  {
    "key": "ctrl+shift+alt+cmd+0",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  }
  // Disable ctrl+d VIM collision
  {
    "key": "ctrl+d",
    "command": "-deleteRight",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+cmd+backspace",
    "command": "notifications.clearAll"
  },
  {
    "key": "ctrl+shift+alt+cmd+enter",
    "command": "workbench.action.keepEditor"
  },
  {
    "key": "cmd+k enter",
    "command": "-workbench.action.keepEditor"
  },
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "listFocus"
  },
  {
    "key": "alt+cmd+n",
    "command": "explorer.newFolder",
    "when": "listFocus"
  },
  {
    "key": "shift+cmd+f",
    "command": "filesExplorer.findInFolder",
    "when": "explorerResourceIsFolder && explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+alt+f",
    "command": "-filesExplorer.findInFolder",
    "when": "explorerResourceIsFolder && explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
]
